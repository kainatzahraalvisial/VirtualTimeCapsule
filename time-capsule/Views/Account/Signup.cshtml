@model time_capsule.Models.SignupModel
@{
    ViewData["Title"] = "Signup";
    ViewData["IsLoggedIn"] = false;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/signup.css" asp-append-version="true" />
<script src="~/js/validate.js" asp-append-version="true"></script>

<div class="signup-container">
    <div class="signup-image">
        <video autoplay loop muted playsinline>
            <source src="/assets/v1.mp4" type="video/mp4" />
            Your browser does not support the video tag.
        </video>
        <h2>Create your Account</h2>
        <p>Capture today for tomorrow. Your stories, waiting to be rediscovered.</p>
    </div>

    <div class="signup-form">
        <form asp-action="Signup" method="post" onsubmit="return validateSignupForm()">
            <h2 class="aurora-text">Sign Up</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input asp-for="FirstName" class="aurora-input" placeholder="Enter your first name" />
            <span class="text-danger" asp-validation-for="FirstName"></span>

            <input asp-for="LastName" class="aurora-input" placeholder="Enter your last name" />
            <span class="text-danger" asp-validation-for="LastName"></span>

            <input asp-for="Email" class="aurora-input" placeholder="Enter your email" />
            <span class="text-danger" asp-validation-for="Email"></span>

            <input asp-for="Password" type="password" class="aurora-input" placeholder="Enter your password" />
            <span class="text-danger" asp-validation-for="Password"></span>

            <input asp-for="ConfirmPassword" type="password" class="aurora-input" placeholder="Confirm your password" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

            <button type="submit" class="aurora-button">Sign Up</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}