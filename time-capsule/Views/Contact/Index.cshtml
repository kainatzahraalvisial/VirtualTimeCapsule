@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main" class="flex-grow-1 position-relative">
    <section class="contact-section position-relative" style="min-height: 100vh;">
        <!-- Container for Vanta.js Topology effect -->
        <div id="vanta-bg" class="position-fixed top-0 start-0 w-100 h-100" style="z-index: -1;"></div>
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <!-- Contact Us Text with localized background -->
                    <div class="contact-info text-light mb-5 text-center" style="position: relative; z-index: 1; padding: 20px; background: rgba(0, 0, 0, 0.7); border-radius: 10px;">
                        <h1 class="display-4 fw-bold cosmic-subtext">Contact us</h1>
                        <p class="lead">Send your message to the stars and let it echo through the cosmos.</p>
                        
                    </div>
                    <!-- Contact Form (below Contact us text, centered) -->
                    <div class="contact-form bg-dark text-light p-4 rounded-3 mx-auto" style="position: relative; z-index: 1; max-width: 500px;">
                        <form>
                            <div class="row g-3">
                                <div class="col-12">
                                    <input type="text" class="form-control bg-secondary text-light border-0" placeholder="Name" required>
                                </div>
                                <div class="col-12">
                                    <input type="email" class="form-control bg-secondary text-light border-0" placeholder="Email" required>
                                </div>
                                <div class="col-12">
                                    <input type="text" class="form-control bg-secondary text-light border-0" placeholder="Phone" required>
                                </div>
                                <div class="col-12">
                                    <input type="text" class="form-control bg-secondary text-light border-0" placeholder="Subject" required>
                                </div>
                                <div class="col-12">
                                    <textarea class="form-control bg-secondary text-light border-0" rows="4" placeholder="Type your message here..." required></textarea>
                                </div>
                                <div class="col-12 text-end">
                                    <button type="submit" class="btn btn-signup rounded-pill">Send message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    .contact-section {
        overflow-x: hidden;
        position: relative;
    }

    .cosmic-subtext {
        font-size: 2.5rem;
        font-weight: 700;
        color: #fff;
        text-shadow: 2px 2px 4px rgba(0, 255, 255, 0.3);
    }

    .contact-info {
        padding: 20px;
    }

    .contact-form {
        background: #171718; /* Matches About page card color, ensuring dark shade */
        color: #fff;
        border-radius: 10px;
        padding: 30px;
        transition: all 0.5s ease;
        opacity: 1;
        position: relative;
        box-shadow: 0 4px 15px #dfd7cc; /* Glow effect from About page */
        transform: perspective(500px) translateZ(0); /* 3D effect */
    }

        .contact-form:hover {
            transform: translateY(-20px) scale(1.05); /* Lift and scale on hover */
            box-shadow: 0 8px 25px #ebe6de; /* Enhanced glow on hover */
        }

        .contact-form .form-control {
            background-color: #252526; /* Medium shade of black to complement form background */
            color: #fff;
            border-radius: 5px;
            padding: 10px;
        }

            .contact-form .form-control:focus {
                background-color: #252526; /* Keep same color on focus */
                color: #fff;
                border-color: #025067;
                box-shadow: 0 0 5px rgba(2, 80, 103, 0.5);
            }

    .btn-signup {
        background: linear-gradient(45deg, #4b0082, #ff00ff, #00f0ff); /* Cosmic gradient: indigo to pink to cyan */
        border: none;
        padding: 10px 20px;
        color: #fff;
        text-decoration: none; /* Remove underline */
        transition: background 0.3s ease;
    }

        .btn-signup:hover {
            background: linear-gradient(45deg, #3a0066, #cc00cc, #00b7b7); /* Darker cosmic gradient on hover */
        }

    #vanta-bg {
        background: #000000;
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/ScrollTrigger.min.js"></script>
    <!-- Include p5.js and Vanta.js Topology effect -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.1.9/p5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.topology.min.js"></script>
    <script>
        console.log("Vanta.js Topology background loaded and running");

        // Initialize Vanta.js Topology effect
        let vantaEffect;
        try {
            vantaEffect = VANTA.TOPOLOGY({
                el: "#vanta-bg",
                p5: p5,
                mouseControls: true,
                touchControls: true,
                gyroControls: false,
                minHeight: 200.0,
                minWidth: 200.0,
                scale: 1.0,
                scaleMobile: 1.0,
                color: 0x025067,
                backgroundColor: 0x000000
            });
            console.log("Vanta.js Topology effect initialized successfully");

            // Increase speed after 2 seconds
            setTimeout(() => {
                if (vantaEffect && vantaEffect.renderer && vantaEffect.renderer.p5Instance) {
                    vantaEffect.renderer.p5Instance.frameRate(30); // Speed up to 30 FPS
                    console.log("Increased animation speed after 2 seconds");
                } else {
                    console.warn("Could not increase speed: Vanta effect or renderer not available");
                }
            }, 2000);
        } catch (error) {
            console.error("Failed to initialize Vanta.js Topology effect:", error);
        }

        console.log("Script execution completed");
    </script>
}