@inject IJSRuntime JSRuntime

<nav class="navbar">
    <div class="navbar-brand aurora-text">VirtualTimeCapsule</div> <!-- Aurora Effect Stays Here -->
    <ul>
        <li><a href="/" class="nav-link">Home</a></li>
        <li><a href="/about" class="nav-link">About</a></li>
        <li><a href="/contact" class="nav-link">Contact Us</a></li>
        <li><a href="/login" class="nav-link">Login</a></li>
    </ul>
    @* <div class="glow-line"></div> @* Glowing effect *@ 
    <a href="/signup" class="signup-btn" onmouseover="this.style.color='white'" onmouseout="this.style.color='white'">Sign Up</a> @* Signup Button Fixed *@
</nav>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initNavbarEffect");
        }
    }
}
